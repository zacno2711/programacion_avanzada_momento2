    body
        div.container
            h2 INICIO DE SESION
            if error == null
                p 
            else if error 
                p(style={color:'red'}) #{message}
            else
                p(style={color:'green'}) #{message}
                       
            form(action="/auth/login",method="post")
                div.row
                    
                    div.form-group
                        label(for='username') User Name
                        input.form-control(type='text', placeholder='User Name' name='username', required)

                    div.form-group
                        label(for='password') Contraseña
                        input.form-control(type='text', placeholder='Contraseña' name='password', required)   
                hr
                .row
                    .col
                        button.btn.btn-success(type="submit") INGRESAR
            hr

            a.btn.btn(href="./register") REGISTRARSE

                            