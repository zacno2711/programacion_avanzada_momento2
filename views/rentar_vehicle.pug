html 
    head 
        title RENTAR VEHICULO 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
        //link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css')
    body
     div.container
            h2 RENTAR VEHICULO
            if error == null
                p 
            else if error 
                p(style={color:'red'}) #{message}
            else
                p(style={color:'green'}) #{message}
                       
            form(action="/rent/rent_vehicle",method="post")
                div.row 
                    
                    div.form-group
                        label(for='rentnumber') Rent Number
                        input.form-control(type='number', placeholder='RentNumber' name='rentnumber', required)

                    div.form-group
                        label(for='username') Usuario
                        input.form-control(type='text', placeholder='Usuario' name='username', required)   
                
                    div.form-group
                        label(for='platenumber') Plate 
                        input.form-control(type='text', placeholder='Plate' name='platenumber', required)    

                    div.form-group
                        label(for='rentdate') Rent Date 
                        input.form-control(type='date', placeholder='Plate' name='rentdate', required)    

                hr
                .row
                    .col
                        button.btn.btn-success(type="submit") REGISTRAR 
            hr

