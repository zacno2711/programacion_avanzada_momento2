html 
    head 
        title Crear Vehiculo 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
        //link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css')
    body
        div.container
            h2 Crear Vehiculo
            if error == null
                p 
            else if error 
                p(style={color:'red'}) #{message}
            else
                p(style={color:'green'}) #{message}
                       
            form(action="/user/create-vehicle",method="post")
                div.row
                    
                    div.form-group
                        label(for='username') Placa
                        input.form-control(type='text', placeholder='Placa' name='platenumber', required)
                
                    div.form-group
                        label(for='name') Marca
                        input.form-control(type='text', placeholder='Marca' name='brand', required)     
                hr
                .row
                    .col
                        button.btn.btn-success(type="submit") Crear Vehiculo 
            hr

            a.btn.btn(href="./cars/listar-vehiculos") Lista de vehiculos
            a.btn.btn(href="./home") Volver

                            





